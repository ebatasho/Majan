            android:entries="@array/spinner_head_han_list"
            android:layout_columnSpan="2"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mentsu_1_spinner"
