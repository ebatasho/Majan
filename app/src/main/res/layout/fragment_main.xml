            android:textSize="10sp"
            android:text="ｼｬﾎﾞ"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tanki_btn"
            android:layout_column="5"
            android:layout_row="4"
