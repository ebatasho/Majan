            android:fontFamily="sans-serif-medium"
            android:layout_columnSpan="2"
            />

        <Button
            android:text="鳴き有り"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/nakiari_btn"
